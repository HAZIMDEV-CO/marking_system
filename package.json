{
  "name": "course-mark-management-system",
  "version": "1.0.0",
  "description": "Minimal Course Mark Management Web App with Vue.js frontend and PHP backend",
  "scripts": {
    "install-frontend": "cd frontend && npm install",
    "install-all": "npm run install-frontend",
    "start-backend": "cd backend && php -S localhost:8000 simple-index.php",
    "start-frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "keywords": [
    "vue",
    "php",
    "mysql",
    "marking",
    "education"
  ],
  "author": "Course Mark Management System",
  "license": "MIT"
} 